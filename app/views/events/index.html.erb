<p id="notice"><%= notice %></p>

<div align="center">
<h1>Events</h1>


  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.description %></td>
          <td><%= link_to 'Show', event, class: 'btn btn-xs btn-primary' %></td>
          <td><%= link_to 'Edit', edit_event_path(event), class: 'btn btn-xs btn-primary' %></td>
          <td cla><%= link_to 'Destroy', event, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


<br>

<%= link_to 'New Event', new_event_path, class: 'btn btn-lg btn-primary' %>
</div>
